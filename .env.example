# ArtImageHub Backend Environment Variables

# App Settings
DEBUG=false

# AI Provider: huggingface (free, dev), replicate (paid, prod), mock (testing)
AI_PROVIDER=huggingface

# Replicate AI API (only needed when AI_PROVIDER=replicate)
REPLICATE_API_TOKEN=your_replicate_api_token_here

# Cloudflare R2 Storage (future)
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=artimagehub

# LemonSqueezy Payment
LEMONSQUEEZY_API_KEY=your_lemonsqueezy_api_key_here
LEMONSQUEEZY_STORE_ID=your_store_id
LEMONSQUEEZY_VARIANT_ID=your_variant_id
LEMONSQUEEZY_WEBHOOK_SECRET=your_webhook_secret
TRIAL_DAYS=7

# Database
DATABASE_PATH=data/artimagehub.db

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
